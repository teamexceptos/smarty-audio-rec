<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/stroke_bg"
    android:backgroundTint="#fff"
    android:elevation="5dp"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recImage"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_keyboard_voice_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/senddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/senderLoc"
                android:layout_alignParentTop="true"
                android:layout_marginRight="9dp"
                android:text="@string/common_google_play_services_update_button"
                android:textAlignment="viewEnd"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/senderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/recImage"
                android:layout_marginLeft="14dp"
                android:layout_toEndOf="@+id/recImage"
                android:text="from"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/senderPhonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/recImage"
                android:text="phonenumber" />

            <TextView
                android:id="@+id/senderLoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:text="loc"
                android:textAlignment="viewEnd"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>